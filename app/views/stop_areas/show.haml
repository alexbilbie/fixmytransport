- content_for :javascript do 
  != map_javascript_include_tags
- cache("stop_area_#{@stop_area.id}") do 
  #map-col
    #map
    :javascript
      var areaStops = #{location_stops_js(@stop_area.stops)}
      jQuery(document).ready(function(){
         area_init();
      });
    .extra-info
      The following stops are here: 
      - @stop_area.stops.each do |stop|
        .stop
          = link_to("#{stop.name_with_long_indicator}", stop_url(stop.locality, stop))
          - if !stop.routes.empty? 
            = render :partial => 'shared/route_list', :locals => {:stop => stop}
  .stop-area
    %a{:href => location_url(@stop_area, :format => 'atom'), :class => 'rss-link story-rss'}
      %span= t(:feed)
      %img{:src => "/images/feed.png", :title => t(:feed), :alt => t(:stories_feed) }
    %h3.name= "#{@stop_area.name} stop area"
    .details
      - if !@stop_area.area.blank?
        %span.locality= "In #{@stop_area.area}"
= render :partial => 'shared/location_stories', :locals => {:location => @stop_area}