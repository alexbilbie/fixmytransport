<div id="main-content" class="container">
	<h3><%= t(:your_account) %></h3>
	<div class='account-info'>
	  <%= image_tag current_user.profile_photo.url(:large_thumb), :class => 'avatar' %>
	  <%= t(:your_email_address) %>
	  <%= current_user.email %>
	</div>
	<%= raw link_to(t(:edit_your_account), edit_account_path, :class => 'button') %>
</div>