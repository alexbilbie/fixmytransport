<div id="banner">
	<div class="container">
		<h1><%= t('campaigns.add_details.add_details') %></h1>
	</div>
</div>

<div id="greybanner">
	<div class="container">
		<p><%= t('campaigns.add_details.add_details_instructions') %></p>
	</div>
</div>
	<div id="main-content" class="container">
  <%- form_for @campaign, :url => add_details_campaign_path(@campaign), :html => {:class => 'form-1', :method => :post, :multipart => true} do |f| %>
		<ul>
			<li>
          <%=  f.label :title, raw("Please help me persuade <span>#{@campaign.responsible_org_descriptor}</span> to:") %>
          <%= raw f.text_field :title %>

			  <%- if @campaign.errors.on('title') %>
			    <%- title_error_style = '' %>
			  <%- else %>
			    <%- title_error_style = 'display: none;'%>
			  <%- end %>
          <div class='error' style="<%= title_error_style %>" role="alert">
            <%= @campaign.errors.on('title') %>
          </div>


				<div class="tipbox">
					<a href="#" class="tip-close"><%= t('campaigns.add_details.tip_close') %></a>
					<h5><%= t('campaigns.add_details.make_a_headline')%></h5>
					<p><%= t('campaigns.add_details.good_headline') %></p>
					<p><%= t('campaigns.add_details.eg') %>"<em><%= t('campaigns.add_details.headline_example')%></em>"</p>
				</div>
			</li>

			<li>
			   <%= f.label :description, "Description" %>
			   <%= raw f.text_area :description %>

				  <%- if @campaign.errors.on('description') %>
				    <%- description_error_style = '' %>
				  <%- else %>
				    <%- description_error_style = 'display: none;'%>
				  <%- end %>
	          <div class='error' style="<%= description_error_style %>">
	            <%= @campaign.errors.on('description') %>
	          </div>
			
				<div class="tipbox">
					<a href="#" class="tip-close"><%= t('campaigns.add_details.tip_close') %></a>
					<h5><%= t('campaigns.add_details.add_short_description') %></h5>
					<p><%= t('campaigns.add_details.description_advice')%></p>
				</div>
			</li>
			<li>
				<button type="submit" class="button"><%= t('campaigns.add_details.details_submit') %></button>
			</li>
		</ul>
	<%- end %>
	</div>