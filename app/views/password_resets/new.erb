<div id="banner">
	<div class="container">
		<h1><%= t('password_resets.new.forgot_password') %></h1>
	</div>
</div>
<div id="greybanner">
	<div class="container">
		<p><%= t('password_resets.new.enter_your_email_address') %></p>
	</div>
</div>
<div id="main-content" class="container">
	<%- form_tag password_resets_path, :class => 'password_reset_email' do  %>
	  
	    <div class="form-field">
	    <label><%= raw t('password_resets.new.email') %></label>
	    <%= raw text_field_tag :email  %>
	    </div>
		<button class="button" type="submit"><%= t('password_resets.new.continue') %></button>
	  
	<%- end %>
</div>