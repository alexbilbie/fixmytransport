- content_for :javascript do 
  != map_javascript_include_tags
#map
:javascript
  var routeStops = #{route_stops_js(@route)}
  jQuery(document).ready(function(){
     route_init();
  });

.route
  = "#{@route.name}"
  .operator
    - if @route.operators.empty? 
      Operator unknown
    - else
      Operated by:
      %ul
      - @route.operators.each do |operator|
        %li= "#{operator.code}"
  .stops
    Stops at:
    %ol
    - @route.route_stops.each do |route_stop|
      %li= link_to(route_stop.name, stop_url(route_stop.stop))
