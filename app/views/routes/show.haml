- content_for :javascript do 
  != map_javascript_include_tags
- cache do 
  #map-col
    #map
    :javascript
      var areaStops = #{location_stops_js([@route])}
      jQuery(document).ready(function(){
         area_init();
      });
    .extra-info
      %ul.stops   
        Stops:
        - @route.stops.sort_by(&:name).each do |stop|
          %li= link_to stop.full_name, stop_url(stop.locality, stop)
  .route
    %a{:href => location_url(@route, :format => 'atom'), :class => 'rss-link story-rss'}
      %span= t(:feed)
      %img{:src => "/images/feed.png", :title => t(:feed), :alt => t(:stories_feed) }
    %h3.name= @route.name
    .details
      %span.locality= "#{@route.area}."
      .operators
        - if !@route.operators.empty? 
          Operated by
          %ul
            - @route.operators.each do |operator|
              %li= operator.name 
      .terminuses
        != terminus_text(@route)
= render :partial => 'shared/location_stories', :locals => {:location => @route}