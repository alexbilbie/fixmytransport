<div id="banner">
  <a id="home" href="/">FixMyTransport</a>
	<div class="container">
		<h1 class="operator-name"><%= @operator.name %></h1>
	</div>
</div>

<div id="main-content" class="container operators has-tabs">
<a id="operator-feedback-link" href="<%= feedback_url(:url => CGI.escape(request.request_uri), :operator_id => @operator.id) %>" rel="nofollow"><%= t('route_operators.show.information_wrong') %></a>
	<div id='operator-tabs' class='ui-tabs ui-widget ui-content ui-corner-all'>
		<ul id="tabs-main-nav" class='font-1 operator-tabs-nav ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all'>
			<%- if @route_count != 0  %>
			<li id="route-tab" class='ui-state-default ui-corner-top ui-tabs-selected ui-state-active'>
				<a href="#operator-tabs-routes"><%= t('route_operators.show.routes_header')%><span class="num"><%= @route_count %></span></a>
			</li>
			<%- end %>
			<%- if @station_count != 0 %>
	        <li id="area-tab" class='ui-state-default ui-corner-top'>
	          <a href="#operator-tabs-areas"><%= t('route_operators.show.stations_header')%><span class="num"><%= @station_count %></span></a>
	        </li>
	    <%- end %>
      <li id="problem-tab" class='ui-state-default ui-corner-top'>
        <a href="#operator-tabs-problems"><%= t('route_operators.show.issues_header')%><span class="num"><%= @issue_count %></span></a>
      </li>


<!--
            <li id="problem-tab" class='ui-state-default ui-corner-top'>
              <a href="#operator-tabs-problems"><%= t('route_operators.show.problems_header')%><span class="num"><%= @problem_count %></span></a>
            </li>
            
            <li id="campaign-tab" class='ui-state-default ui-corner-top'>
              <a href="#operator-tabs-campaigns"><%= t('route_operators.show.campaigns_header')%><span class="num"><%= @campaign_count %></span></a>
            </li>
-->
	    </ul>
		<div id='operator-tabs-routes' class='ui-tabs-panel ui-widget-content ui-corner-bottom ui-tabs ui-widget ui-corner-all'>
			<%- if @route_count != 0  %>
			  <h3><%= t('route_operators.show.operates_routes', :operator => @operator.name, :count => @route_count) %></h3>
			  <ul class='route-links'>
			   <%- @routes.each do |route| %>
			      <li>
			        <a href="<%= "/routes/#{route.slug.scope}/#{route.slug.to_friendly_id}"%>"><%= route.description_with_inactive %></a>
			      </li>
			   <%- end %>
			  </ul>
			<%- end %>
		</div>
		<div id='operator-tabs-areas' class='ui-tabs-panel ui-widget-content ui-corner-bottom ui-tabs ui-widget ui-corner-all'>
			<%- if @station_count != 0 %>
			  <h3><%= t('route_operators.show.is_responsible_for_stations', :operator => @operator.name, :count => @station_count) %></h3>
			  <ul class='route-links'>
			    <%- @stations.each do |station| %>
			      <li>
			        <a href="<%= "/stations/#{station.slug.scope}/#{station.slug.to_friendly_id}" %>"><%= station.name_with_inactive %></a>
			      </li>
			    <%- end %>
			  </ul>
			<%- end %>
		</div>

		<div id='operator-tabs-problems' class='ui-tabs-panel ui-widget-content ui-corner-bottom ui-tabs ui-widget ui-corner-all'>
			 <h3><%= t('route_operators.show.issues_concerning', :operator => @operator.name, :count => @issue_count) %></h3>
			    <%- if @issue_count != 0 %>
			      <%= will_paginate @issues %>
              <ul class="issues-list">
                <%= render :partial => "shared/issue", :collection => @issues, :locals => {:context => :issue_list } %>
              </ul>
            <%= will_paginate @issues %>
       		<%- else %>
       		    <p class="operator-notice"> <%= t('route_operators.show.no_issues_found', :operator => @operator.name) %> </p>
	      <%- end %>
		</div>
    
	</div>
</div>