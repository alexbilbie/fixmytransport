<div id="banner">
  <a id="home" href="/">FixMyTransport</a>
  <div class="container">
    <h1 class="operator-name"><%= @title %></h1>
  </div>
</div>
<%- if @operator.transport_mode %>
  <div id="greybanner">
    <div class="container">
      <%= raw @transport_mode_and_link %>
    </div>
  </div>
<%- end %>
<div id="main-content" class="container operators has-dummy-tabs">  
    </p>
  <p>
    <%= raw @banner_text %>
  </p>

  <div id='operator-dummy-tabs' class='ui-tabs'>
    <ul id="tabs-main-nav" class='font-1 childactive-tab ui-tabs-nav ui-widget-header ui-helper-clearfix'>
      <li class='ui-corner-top <%- if @current_tab == :issues %>ui-tabs-selected ui-state-active<%-end %>'>
        <a <%- if @current_tab != :issues %> href="<%= main_url(issues_operator_path(@operator)) %>" <%- end %>>
          <%= t('route_operators.show.issues_header')%><span class="num"><%= @issue_count %></span>
        </a>
      </li>
      <%- if @route_count > 0 %>
        <li class='ui-corner-top <%- if @current_tab == :routes %>ui-tabs-selected ui-state-active<%-end %>'>
          <a <%- if @current_tab != :routes %>href="<%= main_url(routes_operator_path(@operator)) %>" <%- end %>>
            <%= t('route_operators.show.routes_header')%><span class="num"><%= @route_count %></span></a>
          </a>
        </li>
      <%- end %>
      <%- if @station_count > 0 %>
        <li class='ui-corner-top <%- if @current_tab == :stations %>ui-tabs-selected ui-state-active<%-end %>'>
          <a <%- if @current_tab != :stations %> href="<%= main_url(stations_operator_path(@operator)) %>"<%- end %>>
            <%= @station_type_descriptions[:short].upcase %><span class="num"><%= @station_count %></span>
          </a>
        </li>
      <%- end %>
    </ul>
    <div id='operator-tabs-current' class=''>
      <%- if @current_tab == :routes %>
        <%= will_paginate @routes %>
        <ul class="route-links route-links-large">
          <%- @routes.each do |route| %>
            <li>
              <a href="<%= "/routes/#{route.slug.scope}/#{route.slug.to_friendly_id}"%>"><%= route.description_with_inactive %></a>
            </li>
          <%- end %>
        </ul>
        <%= will_paginate @routes %>
      <%- elsif @current_tab == :stations %>
        <%= will_paginate @stations %>
        <ul class="route-links route-links-large">
          <%- @stations.each do |station| %>
            <li>
              <a href="<%= "/stations/#{station.slug.scope}/#{station.slug.to_friendly_id}"%>"><%= station.name_with_inactive %></a>
            </li>
          <%- end %>
        </ul>
        <%= will_paginate @stations %>
      <%- elsif @current_tab == :issues %>
        <%- if @issue_count != 0 %>
          <%= will_paginate @issues, :params => { :action => :issues } %>
          <ul class="issues-list widecol">
            <%= render :partial => "shared/issue", :collection => @issues, :locals => {:context => :issue_list } %>
          </ul>
          <%= will_paginate @issues, :params => { :action => :issues } %>
        <%- end %>
      <%- end %>
    </div>    
  </div>
  <%- if @current_tab == :routes || @current_tab == :stations %>
    <a id="operator-feedback-link" href="<%= feedback_url(:url => CGI.escape(request.request_uri), :operator_id => @operator.id) %>" rel="nofollow"><%= t('route_operators.show.information_wrong') %></a>
  <%- end %>
</div>
