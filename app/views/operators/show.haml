%h2= @operator.name
- if !@operator.routes.empty? 
  =t(:operates_routes, :operator => @operator.name, :count => @operator.routes.count)
  %ul.operator-routes
    - @operator.routes.each do |route|
      %li
        = link_to(route.name(from_stop=nil, short=true), location_path(route))
        = route.area(lowercase=true)
- if !@operator.stop_areas.empty?
  =t(:is_responsible_for_stations, :operator => @operator.name, :count => @operator.stop_areas.count)
  %ul.operator-stations
    - @operator.stop_areas.each do |station|
      %li
        = link_to(station.name, location_path(station))