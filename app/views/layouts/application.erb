<!DOCTYPE html>
<html lang='<%= I18n.locale %>'>
  <head>
    <title>
      <%= "#{t(:site_name)}#{@title ? ':' : ''} #{@title}" %>
    </title>
    <meta content='text/html; charset=utf-8' http-equiv='Content-type'>
    </meta>
    <%= yield :feeds %>
    <%= csrf_meta_tag %>
    <style type="text/css">
      @import url("/stylesheets/core.css"); 
      @import url("/stylesheets/fixmytransport.css");
      @import url("/stylesheets/map.css");
    </style>
    <%= yield :stylesheets %>
    <%= raw javascript_include_tag('jquery-1.5.2.min', :charset => 'utf-8') %>
    <%= raw javascript_include_tag('jquery-ui-1.8.11.min', :charset => 'utf-8') %>
    <%= raw javascript_include_tag('jquery.autofill', :charset => 'utf-8') %>
    <%= raw javascript_include_tag('jquery.form', :charset => 'utf-8') %>
    <%= yield :javascript %>
  </head>
	<body>
		<div id="wrapper">
			<div id="top" class="container">
				<ul id="mysociety-tab">
					<li><a id="mysociety-logo" href="#">MySociety</a></li>
					<li><a href="http://mysociety.org/donate">Donate</a></li>
					<li><a href="#">Our Sites</a></li>
				</ul>
				<ul id="top-nav">
					<li><a href="/about">About</a></li>
					<li><a href="#">Tour</a></li>
					<li><a href="#">Feedback</a></li>
				</ul>
			
				<a id="logo" href="<%= root_url %>">Fix My Transport</a>
				<%- if current_user %>  
          		<p id="member-info">Hi <a href="<% account_path %>"><%= current_user.name %></a>. <a href="<%= logout_path %>">Logout</a></p>
		  		<%- else %>
		  		<p id="member-info">Hi Guest. <a class="auth" href="<%= login_path %>">Sign in</a></p>
		  		<%- end %>
		  		
				<div id="login-box" class="login-box">
					<div id="login-landing" class="pane">
						<form id="login-form">
						<ul>
							<li class="login-username">
								<label for="username">Email/Username</label>
								<input name="username" type="text" />
							</li>
							<li class="login-password">
								<label for="password">Password</label>
								<input name="password" type="password" />
								<a href="#">Forgot?</a>
							</li>
							<li>
								<button>Sign In</button>
								<label>Keep me signed in</label><input type="checkbox">
								<p>Don't have an account? <a href="#" id="create-account">Create one</a>.</p>
							</li>
						</ul>
						</form>
						<div class="login-options">
							<p>Or use an existing account</p>
							<a href="#" id="facebook" class="facebook">Facebook Connect</a>							
							<a href="#" id="twitter" class="twitter">Twitter Connect</a>
						</div>
					</div>
					
					<div id="login-twitter" class="pane">
						<h2>TWITTER</h2>
					</div>
					
					<div id="login-facebook" class="pane">
						<h2>FACEBOOK</h2>
					</div>
					
					<div id="login-create-account" class="pane">
						<h2>CREATE ACCOUNT</h2>
					</div>
				</div>
			</div>

			<%- if MySociety::Config.getbool('STAGING_SITE', true) %>
        	<div class="staging-banner notice container">
          	<%= t(:development_site) %>
        	</div>
        	<%- end %>

			<%- [:notice, :error].each do |key| %>
          		<%- unless flash[key].blank? %>
				<p class="<%= "flash #{key}" %>">
					<%= raw flash[key] %>
				</p>
          		<%- end %>
        	<%- end %>
        	
			
			<%= yield %>
    	</div>
    	<div id="footer">
			<div class="container">
				<p>
				  <%= raw t(:built_by, :mysociety_link => link_to('mySociety', 'http://mysociety.org'), :indigo_link => link_to('Indigo Trust', 'http://indigotrust.wordpress.com/'), :donor_link => link_to(t(:small_donors), 'http://mysociety.org/donate'), :esmee_link => link_to('EsmÃ©e Fairbairn Foundation', 'http://www.esmeefairbairn.org.uk')) %>
				</p>
			</div>
		</div>
		<%= raw javascript_include_tag('fixmytransport', :charset => 'utf-8') %>
		<%= raw javascript_include_tag('application', :charset => 'utf-8') %>
	</body>
</html>
