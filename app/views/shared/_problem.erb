<li class="performances">
		<h4><a href="<%= problem_url(problem) %>"><%= problem.subject %></a></h4>
	    <p><%= raw link_to(problem.location.description, location_url(problem.location)) %></p>
		<p><%= t('shared.problem.by')%> <a href="<%= profile_url(problem.reporter) %>"><%= problem.reporter.name %></a></p>
		<dl>
			<dt><%= t('shared.problem.added') %></dt>
			<dd><%= problem.confirmed_at.to_s(:short) %></dd>
			<div class="status-item">
				<dt>Status:</dt>
				<dd class="status stat-<%= problem_display_status(problem) %>"><%= problem_display_status(problem).titleize %></dd>
			</div>
		</dl>	
</li>
