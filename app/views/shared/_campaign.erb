<a href="<%= campaign_url(campaign) %>"><img src="http://dummyimage.com/90x90" alt="<%= MySociety::Format.ucfirst(campaign.title) %>" /></a>
<div class="wrapper">
	<h4><a href="<%= campaign_url(campaign) %>"><%= MySociety::Format.ucfirst(campaign.title) %></a></h4>
    <p><%= raw link_to(campaign.location.description, location_url(campaign.location)) %></p>
	<p><%= t('shared.campaign.by')%> <a href="<%= profile_url(campaign.initiator) %>"><%= campaign.initiator.name %></a></p>
	<dl>
		<dt><%= t('shared.campaign.started')%></dt>
		<dd><%= campaign.created_at.to_s(:short) %></dd>
		<dt><%= t('shared.campaign.followers') %></dt>
		<dd><%= campaign.supporters.count %></dd>
		<div class="status-item">
			<dt><%= t('shared.campaign.status')%></dt>
			<dd class="status stat-<%= campaign_display_status(campaign) %>"><%= campaign_display_status(campaign).titleize %></dd>
		</div>
	</dl>	
</div>
