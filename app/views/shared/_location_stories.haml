= render :partial => 'shared/new_story', :locals => { :location => location }
%a{:href => location_url(location, :format => 'atom'), :class => 'rss-link'}
  %span= t(:feed)
  %img{:src => "/images/feed.png", :title => t(:feed), :alt => t(:stories_feed) }
%h3= t(:other_stories_here)
- if !location.stories.confirmed.empty?
  = render :partial => 'shared/story', :collection => location.stories.confirmed, :locals => { :context => :location }