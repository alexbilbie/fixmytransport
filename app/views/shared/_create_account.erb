
<%- form_for((@account_user ||= User.new), :url => account_path, :html => { :id => 'create-account-form' }) do |f| %>
  <div class='fieldset'>
    <%- if @account_user.errors.on('base') %>
      <div class='error' id="error-base">
        <%= error_message_on @account_user, :base %>
      </div>
    <%- else %>
      <div class='error' id='error-base' style="display: none;"></div>
    <%- end %>
    <div class='form-field'>
      <%- if @account_user.errors.on('name') %>
        <div class='error' id="error-name">
          <%= error_message_on @account_user, :name %>
        </div>
      <%- else %>
        <div class='error' id='error-name' style="display: none;"></div>
      <%- end %>
      <%= f.label :name %>
      <%= raw f.text_field :name %>
    </div>
    
    <div class='form-field'>
      <%- if @account_user.errors.on('email') %>
        <div class='error'>
          <%= error_message_on @account_user, :email %>
        </div>
      <%- else %>
        <div class='error' id='error-email' style="display: none;"></div>
      <%- end %>
      <%= f.label :email %>
      <%= raw f.text_field :email %>
    </div>
    
    <div class='form-field'>
      <%- if @account_user.errors.on('password') %>
        <div class='error'>
          <%= error_message_on @account_user, :password %>
        </div>
        <%- else %>
          <div class='error' id='error-password' style="display: none;"></div>
      <%- end %>
      <%= f.label :password %>
      <%= raw f.password_field :password %>
    </div>
    
    <div class='form-field'>
      <%- if @account_user.errors.on('password_confirmation') %>
        <div class='error'>
          <%= error_message_on @account_user, :password_confirmation %>
        </div>
        <%- else %>
          <div class='error' id='error-password_confirmation' style="display: none;"></div>
      <%- end %>
      <%= f.label :password_confirmation  %>
      <%= raw f.password_field :password_confirmation  %>
    </div>
    
    <%= raw f.submit t(:create_account) %>
  </div>
<%- end %>
