.report-problem-link= link_to(t(:report_a_problem_here), new_problem_url(:location_id => location.id, :location_type => location.type))

- if !location.campaigns.confirmed.empty?
  %h3= t(:other_campaigns_here)
  = render :partial => 'shared/campaign', :collection => location.campaigns.confirmed, :locals => { :context => :location }

- if !location.problems.confirmed.empty?
  %h3= t(:other_problems_here)
  = render :partial => 'shared/problem', :collection => location.problems.confirmed, :locals => { :context => :location }