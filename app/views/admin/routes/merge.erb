<h2><%= t(:merging_routes) %></h2>
<%- form_tag(admin_url(merge_admin_routes_path), :method => "POST") do  %>
  <table class='routes merge-list'>
    <tr>
      <th width='14%'><%= t(:id) %></th>
      <th width='5%'><%= t(:admin_route_number) %></th>
      <th width='14%'><%= t(:name) %></th>
      <th width='35%'><%= t(:cached_description) %></th>
      <th width='23%'><%= t(:operators) %></th>
      <th width='10%'><%= t(:region) %></th>
      <th width='5%'><%= t(:merge_to) %></th>
    </tr>
    <%-@routes.each do |route| %>
      <tr class='<%= cycle("odd", "even") %>'>
        <td>
          <%= link_to route.id, main_url(route_path(route.region, route)) %>
          <%= link_to "(#{t(:admin)})", admin_url(admin_route_path(route.id)), {:target => "_blank"} %></td>
        <td><%= route.number   %></td>
        <td><%= route.read_attribute(:name) %></td>
        <td><%= route.name %></td>
        <td><%= raw route.operators.map{ |operator| link_to(operator.name, admin_url(admin_operator_path(operator))) }.join(" ") %></td>
        <td><%= route.region.name %></td>
        <td>
          <%= raw radio_button_tag "merge_to", route.id, route == @routes.first, { :class => "select-item" } %>
          <%= raw hidden_field_tag "routes[]", route.id %>
        </td>
      </tr>
    <%-end %>
    <tr class='footer'>
      <td colspan='8'>
        <%= t(:selected_items) %>
        <%= raw submit_tag t(:merge) %>
      </td>
    </tr>
  </table>
<%-end %>