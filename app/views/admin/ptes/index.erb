<h2><%= t('admin.ptes') %></h2>
<%= will_paginate @ptes, {:admin => true} %>
<table class='ptes index-list'>
  <tr>
    <th width='5%'><%= t('admin.id') %></th>
    <th width='30%'><%= t('admin.name') %></th>
    <th width='65%'><%= t('admin.wikipedia_url')  %></th>
  </tr>
  <%-@ptes.each do |pte| %>
    <tr class="<%=cycle('odd', 'even') %>">
      <td class="numeric">
        <%= link_to pte.id, admin_url(admin_pte_path(pte)) %>
      <td class="easy-read-link"><%= link_to pte.name, admin_url(admin_pte_path(pte)) %></td>
      <td><%= link_to(pte.wikipedia_url, pte.wikipedia_url, {:class => 'admin-small-offsite-link', :target => '_blank'}) %></td>
    </td>
  </tr>
  <%-end %>
  <tr class='footer'>
  </tr>
</table>
<%= will_paginate @ptes, {:admin => true} %>
