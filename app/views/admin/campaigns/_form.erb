<%- if !@campaign.errors.empty? %>
  <div class='form-error'>
    <%= t('admin.campaign_form_error') %>
  </div>
<%- end %>

<div class='form-field'>
  <%- if @campaign.errors.on(:title) %>
    <div class='error'>
      <%= error_message_on @campaign, :title   %>
    </div>
  <%- end %>
  <strong><%= raw label(:campaign, :title) %></strong>
  <%= raw f.text_field :title %>
</div>

<div class='form-field'>
  <%- if @campaign.errors.on(:description) %>
    <div class='error'>
      <%= error_message_on @campaign, :description   %>
    </div>
  <%- end %>
  <strong><%= raw label(:campaign, :description) %></strong>
  <%= raw f.text_area :description, :rows => 6 %>
</div>

<div class='form-field'>
  <%- if @campaign.errors.on(:status_code) %>
    <div class='error'>
      <%= error_message_on @campaign, :status_code %>
    </div>
  <%- end %>
  <strong><%= raw f.label :status %></strong>
  <%= raw f.select :status_code, Campaign.statuses, {:prompt => true, :selected => @campaign.status_code } %>
</div>
<div class='form-field'>
 <strong><%= t('admin.campaign_problem_report') %></strong> <%= link_to(@campaign.problem.subject, admin_url(admin_problem_path(@campaign.problem))) %>
</div>
<div class='form-field'>
  <strong><%= t('admin.campaign_key') %></strong> <%= @campaign.key %>
</div>
<div class='form-field'>
  <strong><%= t('admin.created_at') %></strong> <%= @campaign.created_at %>
</div>
<div class='form-field'> 
  <strong><%= t('admin.updated_at') %></strong> <%= @campaign.updated_at %>
</div>
<%= raw submit_tag t('admin.go') %>


