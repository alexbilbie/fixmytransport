<div class='form-field'>
  <%- if @campaign_update.errors.on(:text) %>
    <div class='error'>
      <%= error_message_on @campaign_update, :text   %>
    </div>
  <%- end %>
  <%= raw label(:campaign_update, :text) %>
  <%= raw f.text_area :text, :rows => 6 %>
</div>

<div>
  <%= t(:created_at) %>: <%= @campaign_update.created_at %>
</div>
<div> 
  <%= t(:updated_at) %>: <%= @campaign_update.updated_at %>
</div>
<div> 
  <%= t(:sent_at) %>: <%= @campaign_update.sent_at %>
</div>

<%= raw submit_tag t(:go) %>


