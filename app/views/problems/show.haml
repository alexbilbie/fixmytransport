- content_for :javascript do 
  =javascript_include_tag 'jquery-1.4.2.min.js'
  =javascript_include_tag "http://maps.google.com/maps?file=api&amp;v=2&amp;sensor=false&amp;key=#{google_maps_key}"
  =javascript_include_tag 'http://openlayers.org/api/OpenLayers.js'
  =javascript_include_tag 'map.js'

- if @problem.location
  #map
  :javascript
    var problem_lat = #{@problem.location.lat};
    var problem_lon = #{@problem.location.lon};
.problem-info
  %h3= @problem.subject
  %p.problem-description= @problem.description
  - if @problem.location
    = render :partial => @problem.location.type.to_s.underscore

    