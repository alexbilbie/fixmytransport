<div id="banner">
	<div class="container">
		<h1>Find a Bus or Coach Route</h1>
	</div>
</div>

<div id="greybanner">
	<div class="container">
		<p><%= t(:what_was_the_number_and_area) %></p>
	</div>
</div>


<div id="main-content" class="container">
	<%- form_tag find_bus_route_problems_path, :id => 'bus_route_form', :method => 'GET' do  %>
	<%- if @error_message %>
      <div class='error'>
        <%= @error_message %>
      </div>
    <%- end %>
	<ul class="form-list">
	    <li class="fieldset">
	      <%= raw label_tag t(:enter_route_number) %>
	      <%= raw text_field_tag 'route_number', params[:route_number] %>
	      <div id='guidance-route-number' class='guidance'>e.g. C10</div>
	    </li>
    
	    <li class="fieldset">
	      <%= raw label_tag t(:enter_town_or_area) %>
	      <%= raw text_field_tag 'area', params[:area] %>
	      <div id='guidance-area' class='guidance'>e.g. London </div>
	    </li>
		<li><button class="point-go" type="submit"><%= t(:go) %></button></li>
    </ul>
	<%- end %>
</div>