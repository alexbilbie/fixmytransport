<div id="banner">
	<div class="container">
		<h1><%= t(:where_is_it) %></h1>
	</div>
</div>

<%- if is_mobile? %>
    <div class="solitary-button">
        <a href="<%= geolocate_url %>" id="geo-find-stop" data-rel="dialog" data-role="button">Here! (auto-locate)</a>
    </div>
<%- end %>

<div id="main-content" class="container">
	<%- form_tag find_stop_problems_path, :id => 'stop_name_form', :method => 'GET', "data-ajax" => "false" do  %>
	<%- if @error_message %>
	<div class='error'><%= @error_message %></div>
	<%- end %>
	<div id="find-stop">
		<label for="name" id='guidance-name' class='guidance'>Enter an area, town or postcode</label>
		<%= raw text_field_tag 'name', params[:name], :size => 40 %>
		<button class="point-go" type='submit'><%= t(:go) %></button>
	</div>
	<%- end %>
</div>