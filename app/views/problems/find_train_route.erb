<div id="banner">
	<div class="container">
		<h1>Find a Train Route</h1>
	</div>
</div>
<div id="greybanner">
	<div class="container">
		<p><%= t(:where_did_you_get_on_and_off) %></p>
	</div>
</div>
<div id="main-content" class="container">
	<div class='problem-form-wrapper'>
	  <%- form_tag find_train_route_problems_path, :id => 'train_route_form', :method => 'GET' do  %>
  
	    <%- @error_messages.each do |error_message| %>
	      <div class='error'>
	        <%= error_message %>
	      </div>
	    <%- end %>
    
	    <div class='form-field'>
	      <%= raw label_tag t(:where_did_you_get_on) %>
	      <%- if @from_stops %>
	        <%= raw select_tag 'from', options_for_select(@from_stops.map{ |stop| [stop.name, stop.name] }.uniq) %>
	        <%= raw hidden_field_tag 'from_exact', true %>
	      <%- else %>
	        <%= raw text_field_tag 'from', @from_stop %>
	      <%- end %>
	      <div id='guidance-from' class='guidance'>e.g. London Euston</div>
	    </div>
    
	    <div class='form-field'>
	      <%= raw label_tag t(:where_did_you_get_off) %>
	      <%- if @to_stops %>
	        <%= raw select_tag 'to', options_for_select(@to_stops.map{ |stop| [stop.name, stop.name] }.uniq) %>
	        <%= raw hidden_field_tag 'to_exact', true %>
	      <%- else %>
	        <%= raw text_field_tag 'to', @to_stop %>
	      <%- end %>
	      <div id='guidance-to' class='guidance'>e.g. Birmingham New Street</div>
	    </div>
    
	    <button class="button" type='submit'><%= t(:go) %></button>
	  <%- end %>
	</div>
	<div class="container">
		<a href="#top" class="goto-top right">Top of page</a>
	</div>
</div>