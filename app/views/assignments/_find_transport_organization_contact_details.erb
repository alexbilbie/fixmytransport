<h2 class="main-header"><%= t('assignments.edit.find_contact_details_header', :name => @assignment.problem.operator.name)%></h2>
<p><%= raw t('assignments.edit.find_contact_details_explanation', :organization => @assignment.problem.operator.name, :link => link_to( @assignment.problem.operator.name, external_search_link(@assignment.problem.operator.name), :title => t('assignments.edit.click_to_search', :search => @assignment.problem.operator.name), :target => '_blank'))%>
</p>
<p>
<%= t('assignments.edit.find_transport_org_use_feedback') %>
</p>
<%- form_for [@campaign, @assignment] do |f| %>
  
  <div class='fieldset'>
  
    <div class='form-field'>
      <%- if @assignment.errors.on('organization_email') %>
        <div class='error'>
          <%= @assignment.errors.on(:organization_email) %>
        </div>
      <%- end %>
      <%= label_tag :organization_email, t('assignments.edit.organization_email') %>
      <%= raw text_field_tag :organization_email, @assignment.data[:organization_email], :size => 45 %>
    </div>
    <%- if @assignment.problem.location.is_a?(StopArea) %>
    <div class='form-field'>
      <div class="checkbox">
        <%= raw check_box_tag :location_only, @assignment.data[:location_only] %>
        <%= label_tag :location_only, t('assignments.edit.contact_for_location') %>
       
    </div>
    </div>
    <%- end %>
    <div class='form-field'>
      <%= raw f.submit t('assignments.edit.submit') %>
    </div>
<%- end %>