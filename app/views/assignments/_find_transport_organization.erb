<h2 class="main-header"><%= t('assignments.edit.find_transport_org_header', :location => @assignment.problem.location.description) %></h2>
<%= t('assignments.edit.find_transport_org_explanation', :location => @assignment.problem.location.description)%>
<%- form_for [@campaign, @assignment] do |f| %>
  
  <div class='fieldset'>
  
    <div class='form-field'>
      <%- if @assignment.errors.on('organization_name') %>
        <div class='error'>
          <%= @assignment.errors.on(:organization_name) %>
        </div>
      <%- end %>
      <%= label_tag :organization_name, t('assignments.edit.organization_name') %>
      <%= raw text_field_tag :organization_name, @assignment.data[:organization_name], :size => 45 %>
    </div>
    
    <div class='form-field'>
      <%- if @assignment.errors.on('organization_email') %>
        <div class='error'>
          <%= @assignment.errors.on(:organization_email) %>
        </div>
      <%- end %>
      <%= label_tag :organization_email, t('assignments.edit.organization_email') %>
      <%= raw text_field_tag :organization_email, @assignment.data[:organization_email], :size => 45 %>
    </div>
    <div class='form-field'>
      <%= raw f.submit t('assignments.edit.submit') %>
    </div>
<%- end %>