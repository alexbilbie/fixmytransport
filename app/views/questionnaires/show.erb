<%- @title = t('questionnaires.show.questionnaire') %>
<%- if @questionnaire.subject.is_a?(Problem) %>
  <%= render :partial => 'shared/problem_details', :locals => {:show_comment_button => false, :show_questionnaire => true } %>
<%- else %>
  <%= render :partial => 'shared/campaign_details', :locals => {:show_questionnaire => true, :show_social => false, :show_comment_button => false, :show_initiator => false, :show_supporters => false, :show_admin_tools => false, :show_expert_tools => false } %>
<%- end %>